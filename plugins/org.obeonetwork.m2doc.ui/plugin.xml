<plugin>
	<extension
         point="org.eclipse.ui.commands">
      <command
            name="Generate Documentation Command"
            id="org.obeonetwork.m2doc.ui.generateDocumentation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.obeonetwork.m2doc.ui.generateDocumentation"
            class="org.obeonetwork.m2doc.ui.command.GenerateHandler">
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.obeonetwork.m2doc.ui.generateDocumentation"
               label="Generate Documentation"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <test
                     property="org.obeonetwork.m2doc.ui.testConfiguration">
               </test>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.obeonetwork.m2doc.ui.propertyTester.ProcessPropertyTester"
            id="org.obeonetwork.m2doc.ui.propertyTester.ProcessPropertyTester"
            namespace="org.obeonetwork.m2doc.ui"
            properties="testProcess"
            type="java.lang.Object">
      </propertyTester>
   </extension>
  
</plugin>
